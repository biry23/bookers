<h1>Books</h1>

<table>
    <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
    </tr>

</table>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div>
      <p>Title</p>
       <%= f.text_field :title %>
  </div>

  <div>
      <p>Body</p>
      <%= f.text_area :body %>
  </div>

  <div>
      <%= f.submit 'Create Book' %>
  </div>


<% end %>


