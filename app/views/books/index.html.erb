<h1>Books</h1>


<table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
<% @books.each do |book| %>

    <tbody>
        <tr>
            <td></td>
            <td></td>
            <td>
                <%= link_to 'Show', books_path(book.id) %> 
            </td>
            <td>
                <%= link_to 'Edit', books_path(book.id) %>
            </td>
            <td>
                <%= link_to 'Destroy', books_path(book.id) %>
            </td>
        </tr>
    </tbody>
</table>

<% end %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <div>
      <p>Title</p>
       <%= f.text_field :title %>
  </div>

  <div>
      <p>Body</p>
      <%= f.text_area :body %>
  </div>

  <div>
      <%= f.submit 'Create Book' %>
  </div>


<% end %>


